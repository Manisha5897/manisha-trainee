<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="serv_prov_tree_view" model="ir.ui.view">
        <field name="name">service.provider.detail.tree</field>
        <field name="model">service.provider.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="provnm" />
                <field name="specialist" />
                <field name="prodttype" />
                <field name="proddprice" />
                <field name="address"/>
                <field name="contact"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="serv_prov_form_view" model="ir.ui.view">
        <field name="name">service.provider.detail.form</field>
        <field name="model">service.provider.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="provnm" />
                        <field name="specialist" />
                        <field name="prodttype" />
                        <field name="proddprice" />
                        <field name="address"/>
                        <field name="contact"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record model="ir.ui.view" id="serv_prov_search_view">
        <field name="name">service.provider.detail.search</field>
        <field name="model">service.provider.detail</field>
        <field name="arch" type="xml">
            <!-- search -->
            <search>
                <field name="provnm"/>
                <field name="specialist"/>
                <!-- filter domain -->
                <field name="proddprice" string="Specialist and Price" filter_domain="['|', ('specialist', 'ilike', self), ('proddprice', 'ilike', self)]"/>
                <!-- group by search -->
                <group string="Group By">
                    <filter name="by_price" string="Product Price"
                                context="{'group_by': 'proddprice'}"/>
                    <filter name="by_product" string="Product"
                                context="{'group_by': 'specialist'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="serv_prov_action_click" model="ir.actions.act_window">
        <field name="name">Service Provider</field>
        <field name="res_model">service.provider.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="lb_app" name="MyLB" />
    <menuitem id="serv_prov_menu_view" name="Service Provider" parent='lb_app' action="serv_prov_action_click" />

</odoo>