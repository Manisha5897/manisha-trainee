<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="customer_tree_view" model="ir.ui.view">
        <field name="name">customer.detail.tree</field>
        <field name="model">customer.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="custnm" />
                <field name="address" />
                <field name="contact" />
                <field name="email" />
            </tree>
        </field>
    </record>

    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">customer.detail.form</field>
        <field name="model">customer.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="custnm" />
                        <field name="address" />
                        <field name="contact" />
                        <field name="email" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- kanban view -->
    <record model="ir.ui.view" id="customer_detail_kanban">
        <field name="name">customer.detail.kanban</field>
        <field name="model">customer.detail</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="custnm" />
                <field name="address" />
                <field name="contact" />
                <field name="email" />
                <templates>
                    <t t-name="kanban-box">
                        <h3><field name="custnm" /></h3>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="customer_action_click" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">customer.detail</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="customer_menu_view" name="Customer" parent='lb_app' action="customer_action_click" />
</odoo>