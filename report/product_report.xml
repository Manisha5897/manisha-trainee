<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <report 
        id="product_report" 
        model="product.data.product" 
        string="Product" 
        report_type="qweb-pdf" 
        name="manisha-trainee-lunchbox.report_product_details" 
        file="manisha-trainee-lunchbox.report_product_details" />

    <data>
        <template id="report_product_details">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <h2>Product Report</h2>
                    <div class="page">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Product Type</th>
                                    <th>Product Price</th>
                                    <th>Product Start Date</th>
                                    <th>Product End Date</th>
                                    <th>Total Service of Day</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td><span t-field="o.prodnm" /></td>
                                        <td><span t-field="o.prodtype" /></td>
                                        <td>
                                            <span t-field="o.prodprice" />
                                        </td>
                                        <td>
                                            <span t-field="o.product_start_date" />
                                        </td>
                                        <td>
                                            <span t-field="o.product_end_date" />
                                        </td>
                                        <td>
                                            <span t-field="o.total_day" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>