<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <report 
        id="product_report" 
        model="product.data.product" 
        string="Product Report" 
        report_type="qweb-pdf" 
        name="manisha-trainee-lunchbox.report_product_details" 
        file="manisha-trainee-lunchbox.report_product_details" />

    <data>
        <template id="report_product_details">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <h2>Product Report</h2>
                    <div class="page">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Product Type</th>
                                    <th>Product Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td><span t-field="o.name" /></td>
                                        <td><span t-field="o.product_type" /></td>
                                        <td>
                                            <span t-field="o.price" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>